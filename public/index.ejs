      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
      <style>
        body{
          background-color: rgb(230, 235, 239);
        }

        footer{
          position: absolute;
          bottom: 0px;
        }

        main{
          position: absolute;
          top: 100px;
        }

        .upload {
          width: 500px;
        }

        .search {
          width: 750px;
        }

        .sidebar {
          width: 800px;
        }

        
        
        .input {
          display: grid;
          grid-template-columns: 2fr 1fr;
          grid-template-rows: 1fr 1fr;
        }
        
        
      </style>
  </head>
  <body>

    <!---File Server Project--> 
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <p>FileServer</p>
      <div class="container-fluid">
        <nav class="nav">
          <a class="nav-link active" aria-current="page" href="/Index">Home</a>
          <a class="nav-link" href="/FeedPage">FeedPage</a>
          
          
        </nav>
      </div>
      <a class="nav-link " href="/Login">Logout</a>
    </nav>


    
    <main >
      <div class="container-fluid">
        <div class="row input">
          <div class="col search">
            <form class="container" action="/fileSearch" method="GET">
              <input class="form-control me-2" name="search" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>     
          </div>
              
          <div class="container sidebar">
            <div class=" row well">
              <h3>Look I'm A Sidebar! juihoihiiiiiiiiiiiiiiiiiiii</h3>
              <h3>Look I'm A Sidebar!</h3>
              <h3>Look I'm A Sidebar!</h3>
              <h3>Look I'm A Sidebar!</h3>
              <h3>Look I'm A Sidebar!</h3>
            </div>
          </div>
    
    
          <div class="col upload">
            <form action="/fileUpload" enctype="multipart/form-data" method="POST">
    
              <div class="form-group">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="title" id="title">

                <label for="description" class="form-label">Description</label>
                <textarea type="text" class="form-control" name="description" id="description"></textarea>

                <label for="upload" class="form-label">Upload File</label>
                <input type="file" class="form-control" name="upload" id="upload" row="2" cols="20">


              </div>
          
              <button type="submit" class="btn btn-primary">Upload</button>
          
            </form>
          </div>
        
        </div>
      </div>

        
    </main>
        
    <footer class="container px-4 gx-5 gy-5">
      <p class="text-center text-muted">&copy; Copyright 2022 File server</p>
    </footer>
    
  </body>
